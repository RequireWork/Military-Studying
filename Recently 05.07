std::cout << computer;
  if((computer == 1 && user == 3) || (computer == 2 && user == 1) || (computer == 3 && user == 2))
  {
    std::cout << "Computer Wins!";
  }
  else if((computer == 1 && user == 2) || (computer == 2 && user == 3) || (computer == 3 && user == 1))
  {
    std::cout << "Human Wins!";
  }
  else
  {
    std::cout << "No One Wins!";
  }
}
